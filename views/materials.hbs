<section id="dashboard-page" class="dashboard">
    {{#if materials}}
    <ul class="other-books-list">
        {{#each materials}}
        <form action="/order/{{_id}}" method="post">
            <li class="otherBooks">
                <p><strong>{{name}}</strong></p>
                <p class="img"><img src="{{img}}"></p>
                <p>{{price}} лв</p>
                <a class="button" href="/details/{{_id}}">Описание</a>
                {{#if ../user}}
                <div class="options">

                    <span>Количество: <input class="qty" name="quantity" id="quantity" type="number" /></span>

                    <input type="submit" id="add" class="button" value="Добави" />
                </div>
                {{/if}}
            </li>
        </form>
        {{/each}}
    </ul>
    {{else}}
    <p class="no-books">Няма налични материали.</p>
    {{/if}}
</section>